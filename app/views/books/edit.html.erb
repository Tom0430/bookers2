<%= form_for(@book) do |f| %>
    <% if @book.errors.any? %>
       <h2><%= @book.errors.count %> error</h2>
       <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
    <% end %>
<% end %>

<h1>Editing book</h1>
<%= form_for(@book) do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Opinion</h4>
    <%= f.text_area :body %>
    <%= f.submit '保存' %>
<% end %>
<%= link_to 'Show', book_path %>
<%= link_to 'Back', books_path %>
