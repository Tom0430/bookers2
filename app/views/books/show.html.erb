<div class="container">
  <div class="row">
    <%= render 'users/list', user: @user, book: @book %>
    <div class="col-lg-8">
      <div>Book detail</div>
      <table class="table">
          <thead>
            <tr></tr>
          </thead>
          <tbody>
            <tr>
            <td>
              <%= link_to user_path(@user) do %>
                <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
                <%= @user.name %>
              <% end %>
            </td>
            <td>
              <%= link_to book_path(@bookd.id) do %>
                <%= @bookd.title %>
              <% end %>
            </td>
            <td>
              <%= @bookd.body %>
            </td>
            <% if @user.id == current_user.id %>
            <td>
                <%= link_to 'edit', edit_book_path(@bookd.id), class: "btn" %>
            </td>
            <td>
                <%= link_to 'Destroy', book_path(@bookd.id), method: :delete, class: "btn", data: {confirm: "本当に削除しますか？"} %>
            </td>
            <% end %>
          </tr>
          </tbody>
      </table>
    </div>
  </div>
</div>


