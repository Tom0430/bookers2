<% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
    <% end %>

<%= form_for(@book) do |f| %>
    <% if @book.errors.any? %>
       <h2><%= @book.errors.count %> error</h2>
       <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
    <% end %>
<% end %>

<div class="container">
    <div class="row">
      <%= render 'users/list', user: @user, book: @book %>
      <div class="col-lg-8">
        <div>Books</>
      <table class="table">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <% @bookall.each do |bookall| %>
                <td>
                  <%= link_to user_path(bookall.user.id) do %>
                      <%= attachment_image_tag bookall.user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
                  <% end %>
                </td>
                <td>
                  <%= link_to book_path(bookall.id) do %>
                    <%= bookall.title %>
                  <% end %>
                </td>
                <td>
                  <%= bookall.body %>
                </td>
            </tr>
              <% end %>
          </tbody>
          </table>
          </div>
    </div>
</div>