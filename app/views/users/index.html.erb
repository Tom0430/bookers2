<div class="container"> 
      <%= render 'users/list', user: @user, book: @book %>
      <div class="col-lg-8">
　　　　<h2>Users</h2>
　　　　<table class="table">
        <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
            </tr>
        </thead>
        <tbody>
            <tr>
            　　<% @usera.each do |usera| %>
                <td>
                    <%= attachment_image_tag usera, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
                </td>
                <td>
                    <%= usera.name %>
                </td>
                <td>
                    <%= link_to 'Show', user_path(usera.id) %>
                </td>
            </tr>
                <% end %>
        </tbody>
        </table>
      </div>
    </div>
</div>
