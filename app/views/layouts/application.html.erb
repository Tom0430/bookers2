<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
  <div id="header">
  <nav class="navbar navbar-inverse">
      <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <span>Bookers</span>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav navbar-nav navbar-right">
            <% if user_signed_in? %>
              <li class="">
                <%= link_to 'Home', user_path(current_user.id), class:"glyphicon glyphicon-home" %>
              </li>
              <li class="">
                <%= link_to 'Users', users_path, class:"glyphicon glyphicon-user" %>
              </li>
              <li class="">
                <%= link_to 'Books', books_path, class:"glyphicon glyphicon-book" %>
              </li>
              <li class="">
                <%= link_to "logout", destroy_user_session_path, method: :delete, class:"glyphicon glyphicon-log-out" %>
              </li>
              <% else %>
              <li class="">
              ã€€<%= link_to "Home", root_path, class:"glyphicon glyphicon-home" %>
              </li>
              <li class="">
                <%= link_to "About", home_about_path, class:"glyphicon glyphicon-link" %>
              </li>
              <li class="">
                <%= link_to "Sign up", new_user_registration_path, class:"glyphicon glyphicon-edit" %>
              </li>
              <li class="">
                <%= link_to "log in", new_user_session_path, class:"glyphicon glyphicon-log-out" %>
              </li>
            <% end %>
          </ul>
        </div><!-- /.navbar-collapse -->
      </div><!-- /.container-fluid -->
    </nav>
  </div>
  <% if flash[:notice] %>
    <div class="flash">
    <%= flash[:notice] %>
    </div>
  <% end %>
    <%= yield %>
    <footer>
      <p>CopyRight Infratop.inc</p>
    </footer>
  </body>
</html>
